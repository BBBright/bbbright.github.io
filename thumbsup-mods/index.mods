<!DOCTYPE html>
<html>

  <head>
      <meta charset="utf-8" />
      <meta name="viewport" content="width=device-width, user-scalable=no" />
      <title>Photo album - Home</title>

      <link rel="stylesheet" href="public/lightgallery/css/lightgallery.min.css" />
      <link rel="stylesheet" href="public/videojs/video-js.min.css" />
      <link rel="stylesheet" href="public/core.css" />
      <link rel="stylesheet" href="public/theme.css" />

  </head>

  <body>

    <div id="container">

    </div>

    <!-- jQuery -->
    <script src="public/jquery.min.js"></script>
    <!-- A jQuery plugin that adds cross-browser mouse wheel support. (Optional) -->
    <script src="public/jquery.mousewheel.min.js"></script>
    <!-- VideoJS -->
    <script src="public/videojs/video.min.js"></script>
    <!-- LightGallery -->
    <script src="public/lightgallery/js/lightgallery-all.min.js"></script>

    <script>
      $(document).ready(function() {
        $("#media").lightGallery({
          getCaptionFromTitleOrAlt: false,
          preload: 2,
          thumbWidth: 80,
          controls: true,
          loop : true,
          download: true,
          counter: true,
          videojs: true
        });
      });
    </script>

  </body>

</html>
